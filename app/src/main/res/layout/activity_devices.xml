<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.tuyaOldScreens.DevicesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@color/lightGrey"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/electricalBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:gravity="center"
                android:padding="10dp"
                android:text="Electrical Engineering"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lightingBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:gravity="center"
                android:padding="10dp"
                android:text="Lighting"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lHomeAppliances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:gravity="center"
                android:padding="10dp"
                android:text="Large home appliances"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sHomeAppliances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:gravity="center"
                android:padding="10dp"
                android:text="Small home appliances"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/kAppliances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:gravity="center"
                android:padding="10dp"
                android:text="Kitchen Appliances"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/securityAndSensors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:gravity="center"
                android:padding="10dp"
                android:text="Security &amp; Sensor"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/exerciseAndHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:gravity="center"
                android:padding="10dp"
                android:text="Exercise &amp; Health"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:gravity="center"
                android:padding="10dp"
                android:text="Others"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deviceRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>